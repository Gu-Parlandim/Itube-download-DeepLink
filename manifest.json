{
  "manifest_version": 3,
  "name": "Itube-Deep-Link",
  "version": "1.0.01",
  "description": "Extens√£o para abrir links do Youtube no Itube-download app",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/link.svg"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "index.html",
    "default_title": "IItube DeepLink"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["main.js"]
    }
  ]
}