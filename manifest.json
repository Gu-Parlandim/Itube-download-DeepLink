{
  "manifest_version": 3,
  "name": "Itube-Deep-Link",
  "version": "1.0.01",
  "description": "Extens√£o para abrir links do Youtube no Itube-download app",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/link.svg"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
   
    "default_title": "Clique para abrir no Itube"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["main.js"]
    }
  ]
}